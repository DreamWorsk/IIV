ребенок(X, Y) :- отец(Y, X).
ребенок(X, Y) :- мать(Y, X).
сын(X, Y) :- мужчина(X), ребенок(X, Y).
дочь(X, Y) :- женщина(X), ребенок(X, Y).
родители(X, Отец, Мать) :- отец(Отец, X), мать(Мать, X).
дети_пары(Отец, Мать, Ребенок) :-
    отец(Отец, Ребенок),
    мать(Мать, Ребенок).
